# MNEE Connect Environment Variables
# Copy this to .env.local and fill in your values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/mnee_connect?schema=public"

# MNEE Token Configuration
NEXT_PUBLIC_MNEE_TOKEN_ADDRESS="0x8ccedbae4916b79da7f3f612efb2eb93a2bfd6cf"
NEXT_PUBLIC_MNEE_DECIMALS="6"

# Blockchain Configuration
NEXT_PUBLIC_CHAIN_ID="1"
NEXT_PUBLIC_RPC_URL="https://eth-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY"

# WalletConnect (Optional - for ConnectKit)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID="YOUR_WALLETCONNECT_PROJECT_ID"

# Alchemy Account Abstraction (Optional - for gasless payments)
ALCHEMY_API_KEY="YOUR_ALCHEMY_API_KEY"
ALCHEMY_GAS_POLICY_ID="YOUR_GAS_POLICY_ID"

# API Configuration
NEXT_PUBLIC_API_BASE_URL="http://localhost:3000"

# Environment
NODE_ENV="development"
